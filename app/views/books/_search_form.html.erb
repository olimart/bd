<div class="d-none py-2" data-toggle-target="toggleable">
  <%= form_tag({
    controller: "books",
    action: "search_on_amazon"},
    remote: true,
    class: "global-search"
  ) do %>
  <div class="row g-3">
    <div class="col-sm-10">
      <%= text_field_tag :q, nil, placeholder: "ISBN number", class: "form-control input-lg" %>
    </div>
    <div class="col-sm d-grid gap-1">
      <%= submit_tag t("book.search"),
          data: { disable_with: t("book.searching") },
          class: "btn btn-outline-light btn-block" %>
    </div>
  </div>
  <% end %>
</div>
