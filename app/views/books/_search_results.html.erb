<% if @results.present? %>
  <div class="row search-results">
	  <% @results.items.each do |item| %>

	    <% item_attributes = item.get_element('ItemAttributes') %>
		  <% asin = item.get('ASIN') %>
		  <% isbn = item_attributes.get('ISBN') %>
	    <% small_img = item.get_hash('SmallImage') %>
		  <% medium_img = item.get_hash('MediumImage') %>
		  <% large_img = item.get_hash('LargeImage') %>

	   <div class='book col-sm-6 col-md-2'>
			  <div class="thumbnail">
			    <% if medium_img %>
		  	    <%= image_tag(large_img["URL"], size: '172x212') %>
		  	  <% else %>
		  	    <%= holder_tag '172x212', 'cover' %>
		  	    <!-- <img src="http://placehold.it/155x212&text=cover"> -->
		  	  <% end %>
			    <div class="caption">
			      <h5 class='title'><%= item_attributes.get('Title').truncate(75).titleize %></h5>
			      <p class='text-muted'><%= item.get('ItemAttributes/ReleaseDate') || '--' %></p>
            <p>
            	<%= link_to 'Ajouter', new_book_path(asin: asin), data: {toggle: 'modal', target: '#page-modal'}, class: 'btn btn-default', style: 'width:62%' %>
              <%= link_to "AMZN", amzn_book_url(isbn), class: 'btn btn-warning', style: 'width:35%', target: 'blank' %>
            </p>
			    </div>
			  </div>
			</div>
		<% end %>
	</div>
<% else %>
  <p class="alert alert-warning">Aucun livre trouv√©.</p>
<% end %>
