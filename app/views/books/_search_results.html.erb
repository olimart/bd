<% if @results.present? %>
  <div class='row search-results'>
    <div class='book col-sm-6 col-md-2'>
      <div class='thumbnail'>
        <% if @results[:cover_url].present? %>
          <%= image_tag(@results[:cover_url], size: '172x212') %>
        <% else %>
          <%= holder_tag '172x212', 'cover' %>
        <% end %>
        <div class='caption'>
          <h5 class='title'><%= @results[:title].try(:truncate, 75).try(:titleize) %></h5>
          <p class='text-muted'><%= @results[:release_date] || '--' %></p>
          <p>
            <%= link_to t('book.add'), new_book_path(isbn: @results[:isbn]), data: { toggle: 'modal', target: '#page-modal' }, class: 'btn btn-default', style: 'width:62%' %>
            <%= link_to t('book.amzn'), amzn_book_url(@results[:isbn]), class: 'btn btn-warning', style: 'width:35%', target: 'blank' %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <p class='alert alert-warning'><%= t 'book.none' %>.</p>
<% end %>
