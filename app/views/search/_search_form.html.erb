<div class="d-none py-2" data-toggle-target="toggleable">
  <%= form_with url: search_amazon_path,
      class: "global-search" do |form| %>
    <div class="row g-3">
      <div class="col-sm-10">
        <%= form.search_field :q,
            placeholder: "ISBN number",
            class: "form-control input-lg" %>
      </div>
      <div class="col-sm d-grid gap-1">
        <%= form.submit t("book.search"),
            data: { turbo_disable_with: t("book.searching") },
            class: "btn btn-outline-light btn-block" %>
      </div>
    </div>
  <% end %>
</div>
